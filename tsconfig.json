{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~/modules/*": ["./src/modules/*"],
      "~/infra/*": ["./src/infra/*"],
      "~/application/*": ["./src/application/*"],
      "~/core/*": ["./src/core/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "tsup.config.ts"]
}
